<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@color/bgLight"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/point_icon"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/point"/>

        <TextView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_100_points"
            android:layout_marginStart="35dp"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            android:textColor="@color/text"/>

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/profile"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/history_icon"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/counter_history"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"/>

        <ImageView
            android:id="@+id/blog_icon"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/news"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="80dp"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_back_name"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textSize="16sp"
                    android:textColor="@color/text"/>

                <TextView
                    android:id="@+id/content_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="@string/how_s_your_day_ready_to_walk"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="12sp"
                    android:textColor="@color/text"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center">

                <androidx.cardview.widget.CardView
                    android:id="@+id/banner"
                    android:layout_width="354dp"
                    android:layout_height="160dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/fashion"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rewards_fever"
                            android:textColor="@color/text_white"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textSize="16sp"
                            android:layout_marginTop="110dp"
                            android:layout_marginStart="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/we_ve_added_more_rewards_check_them_out"
                            android:textColor="@color/text_white"
                            android:fontFamily="@font/montserrat_regular"
                            android:textSize="12sp"
                            android:layout_marginTop="130dp"
                            android:layout_marginStart="20dp"/>


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/rewards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rewards"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textColor="@color/text"/>

                <TextView
                    android:id="@+id/reward_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/don_t_just_walk_spend_them"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/text"
                    android:layout_marginTop="25dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/food_card_view"
                    android:layout_width="172dp"
                    android:layout_height="66dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:layout_marginEnd="170dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/food"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/food"
                            android:textColor="@color/text_white"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textSize="16sp"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/fashion_card_view"
                    android:layout_width="172dp"
                    android:layout_height="66dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="170dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/fashion"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fashion"
                            android:textColor="@color/text_white"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textSize="16sp"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/sport_card_view"
                    android:layout_width="172dp"
                    android:layout_height="66dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="170dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/sports"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sport"
                            android:textColor="@color/text_white"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textSize="16sp"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/more_card_view"
                    android:layout_width="172dp"
                    android:layout_height="66dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="80dp"
                    android:layout_marginStart="170dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/todo"
                            android:src="@drawable/more"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/more"
                            android:textColor="@color/text_white"
                            android:fontFamily="@font/montserrat_semi_bold"
                            android:textSize="16sp"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/your_stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_stats"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textColor="@color/text"/>

                <TextView
                    android:id="@+id/stats_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_your_progress_so_far"
                    android:textSize="12sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:textColor="@color/text"
                    android:layout_marginTop="25dp"/>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/featured_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="18dp"
                android:background="@color/bgLight"
                android:layout_marginBottom="100dp">

            </androidx.recyclerview.widget.RecyclerView>

