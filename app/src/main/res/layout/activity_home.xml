        </LinearLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/button_card_view"
                android:layout_width="232dp"
                android:layout_height="57dp"
                app:cardCornerRadius="30dp"
                android:layout_centerInParent="true"
                app:cardBackgroundColor="@color/inputFieldBg"
                app:cardElevation="30dp"
                android:layout_marginBottom="30dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/home_interaction"
                        android:layout_width="20.40dp"
                        android:layout_height="23dp"
                        android:src="@drawable/home"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="15dp"
                        android:transitionName="onchanged"
                        android:contentDescription="@string/todo" />

                    <ImageView
                        android:id="@+id/achievement_interaction"
                        android:layout_width="23.50dp"
                        android:layout_height="23dp"
                        android:src="@drawable/ach"
                        android:layout_marginEnd="40dp"
                        android:layout_marginTop="15dp"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/todo" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="-10.5dp">

            <Button
                android:id="@+id/button_start"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/todo"
                android:background="@drawable/start"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>

