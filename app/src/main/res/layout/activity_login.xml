<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".Login">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/logo"
        android:transitionName="logo_transit"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".2"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/login_username_field"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_field_bg"
        android:elevation="6dp"
        android:padding="10dp"
        android:fontFamily="@font/montserrat_regular"
        android:textColor="@color/text"
        android:hint="@string/username"
        android:textColorHint="@color/text"
        android:inputType="text"
        android:autofillHints="@string/username"
        android:transitionName="username_transit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".5"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/login_password_field"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_field_bg"
        android:elevation="6dp"
        android:fontFamily="@font/montserrat_regular"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/text"
        android:textColorHint="@color/text"
        android:autofillHints="@string/password"
        android:transitionName="password_transit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.655"/>

    <Button
        android:id="@+id/login_button_login"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_bg"
        android:text="@string/login"
        android:padding="10dp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/bgLight"
        android:textSize="17sp"
        android:textAllCaps="false"
        android:transitionName="login_transit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".8"/>

    <Button
        android:id="@+id/login_button_register"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:background="@drawable/register_bg"
        android:text="@string/register"
        android:padding="10dp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/text"
        android:textSize="17sp"
        android:transitionName="register_transit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAllCaps="false"
        app:layout_constraintVertical_bias=".9"/>

</androidx.constraintlayout.widget.ConstraintLayout>

